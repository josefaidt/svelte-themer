{
  "name": "svelte-themer",
  "type": "module",
  "version": "0.5.5-next.0",
  "homepage": "https://svelte-themer.vercel.app",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/josefaidt/svelte-themer"
  },
  "exports": {
    "./store": "./src/support/store.js",
    "./use": "./src/components/use.js"
  },
  "keywords": [
    "svelte",
    "theme",
    "theming"
  ],
  "publishConfig": {
    "directory": "package"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "prepublishOnly": "pnpm test run && pnpm package",
    "format": "prettier --write \"{src,docs}/**/*.{js,json,svelte}\"",
    "test": "vitest",
    "types": "npx -p typescript tsc src/**/*.js --declaration --allowJs --emitDeclarationOnly",
    "coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.29",
    "@vitest/ui": "latest",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.3",
    "svelte2tsx": "^0.5.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vitest": "^0.2.5"
  },
  "peerDependencies": {
    "svelte": "^3.46.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint"
    ],
    "*.{js,svelte,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=3"
  }
}
