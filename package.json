{
  "name": "svelte-themer",
  "type": "module",
  "version": "0.4.13-next.0",
  "homepage": "https://svelte-themer.vercel.app",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/josefaidt/svelte-themer"
  },
  "svelte": "./src/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/svelte-themer.js",
      "require": "./lib/svelte-themer.umd.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "types"
  ],
  "keywords": [
    "svelte",
    "theme",
    "theming"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:types": "sveld",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "changeset publish",
    "format": "prettier --write \"{components,support,docs}/**/*.{js,json,svelte}\"",
    "test": "jest components"
  },
  "dependencies": {
    "css-vars-ponyfill": "^2.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@babel/preset-env": "^7.15.8",
    "@changesets/cli": "^2.17.0",
    "@leveluptuts/svelte-toy": "^0.0.15",
    "@sveltejs/vite-plugin-svelte": "next",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "babel-jest": "^27.1.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-svelte3": "^3.2.1",
    "jest": "^27.1.1",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0",
    "sveld": "^0.10.2",
    "svelte": "^3.43.2",
    "svelte-jester": "1.8.2",
    "svelte-preprocess": "^4.9.8",
    "vite": "^2.6.7"
  },
  "peerDependencies": {
    "svelte": "^3.43.2"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "svelte3",
      "jest"
    ],
    "ignorePatterns": [
      "*.cjs"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-top-level-await"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint"
    ],
    "*.{js,svelte,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  },
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ]
}
